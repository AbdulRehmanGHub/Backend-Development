<% layout("/layouts/boilerplate") %>
<body class="bg-slate-800 text-slate-100">
  <div class="min-h-screen px-4 md:px-10 py-8 max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold">Book Details</h2>
      <a href="/books" class="inline-block">
        <button
          class="px-4 py-2 text-sm font-medium transition-colors duration-200 bg-slate-700 rounded-lg hover:bg-slate-600 cursor-pointer"
        >
          Back to Books
        </button>
      </a>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
      <div class="lg:w-1/2">
        <div class="bg-slate-900 rounded-lg overflow-hidden">
          <img
            src="<%= aBook.image %>"
            alt="<%= aBook.title %> cover"
            class="w-full h-96 object-contain"
          />
        </div>
      </div>

      <div class="lg:w-1/2 space-y-6">
        <div class="space-y-4">
          <div>
            <h3 class="text-3xl font-bold"><%= aBook.title %></h3>
            <p class="text-slate-400 mt-2"><%= aBook.author %></p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-slate-400">Language</p>
              <p class="font-medium"><%= aBook.language %></p>
            </div>
            <div>
              <p class="text-slate-400">Price</p>
              <p class="font-medium text-teal-400">
                Rs. <%= aBook.price.toLocaleString() %>
              </p>
            </div>
          </div>

          <div>
            <p class="text-slate-400">Description</p>
            <p class="text-slate-300 leading-relaxed line-clamp-4">
              <%= aBook.description %>
            </p>
          </div>
        </div>

        <div class="flex flex-wrap gap-4 mt-8">
          <a href="/book/<%=aBook._id%>/edit" class="inline-block">
            <button
              class="px-6 py-2 font-medium transition-colors duration-200 bg-teal-600 rounded-lg hover:bg-teal-700 cursor-pointer"
            >
              Edit Book
            </button>
          </a>
          <form
            method="post"
            action="/book/<%=aBook._id%>?_method=DELETE"
            class="inline-block"
          >
            <button
              class="px-6 py-2 font-medium transition-colors duration-200 bg-red-600 rounded-lg hover:bg-red-700 cursor-pointer"
            >
              Delete Book
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
