<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Creator App</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-zinc-900 text-white min-h-screen">
        <div class="md:px-10 md:py-8 px-2 py-4">
            <nav>
              <a
                href="/"
                class="bg-blue-700 px-2 py-1 rounded-md hover:bg-blue-800 transition-colors duration-300"
              >
              &larr; Back to home
              </a>
            </nav>

      <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl text-center font-bold my-8">All Users</h1>

        <div
          class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-6"
        >

        <% if(users.length > 0){ %>
            <% users.forEach((user)=>{ %>
                <div
                class="bg-zinc-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300"
              >
                <div class="aspect-square bg-zinc-700">
                  <img
                    src="<%= user.img_url %>"
                    alt="User profile picture"
                    class="w-full h-full object-cover"
                  />
                </div>
    
                <div class="p-4">
                  <h3 class="text-xl font-semibold truncate"><%= user.name %></h3>
                  <p class="text-sm text-zinc-400 truncate"><%= user.email %></p>
                </div>
    
                <div class="flex justify-center gap-4 p-4 border-t border-zinc-700">
                  <a
                    href="/edit/<%= user._id %>"
                    class="px-3 py-1 bg-green-600 hover:bg-green-700 rounded-md transition-colors duration-200 text-sm"
                  >
                    Edit
                  </a>
                  <a
                    href="/delete/<%= user._id %>"
                    class="px-3 py-1 bg-red-600 hover:bg-red-700 rounded-md transition-colors duration-200 text-sm"
                  >
                    Delete
                  </a>
                </div>
              </div>
            <% }) %>
       <% } else { %>
        <p class="text-zinc-500">No user found.</p>
      <% } %>
        

          

        </div>
      </div>

  </body>
</html>
